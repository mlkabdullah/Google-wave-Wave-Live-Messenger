<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>WaveLiveMessenger</servlet-name>
        <servlet-class>wavelivemessenger.WaveLiveMessengerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WaveLiveMessenger</servlet-name>
        <url-pattern>/_wave/robot/jsonrpc</url-pattern>
    </servlet-mapping>
    <servlet>
    	<servlet-name>WaveLiveMessengerProfileServlet</servlet-name>
    	<servlet-class>wavelivemessenger.WaveLiveMessengerProfileServlet</servlet-class>
  	</servlet>
  	<servlet-mapping>
    	<servlet-name>WaveLiveMessengerProfileServlet</servlet-name>
    	<url-pattern>/_wave/robot/profile</url-pattern>
  	</servlet-mapping>
</web-app>